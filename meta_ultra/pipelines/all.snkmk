	elif dataType == DataType.WGS_DNA_SEQ_PAIRED_END:
		pattern = config['OUTPUT_DIR']+'{sample}.{data_name}_host_{num}.fastq.gz'
		reads.append( pattern.format(sample=wc.sample, data_name=wc.data_name, num=1))
